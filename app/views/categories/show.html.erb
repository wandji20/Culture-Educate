<section class="mt-4 ">
  <h3 class="row justify-content-center"> <%= @category.name %></h3>
  <div class="article_section">
    <% @articles.each do |article| %>
      
      <article class=''>
        <figure class=''>
          <%= image_tag article.image_url, class: 'image' if article.image %>        
        </figure>
        <div class=' bg-light'>
          <h6><%= article.title %></h6>
          <p><%= article.body %></p>
          <div>
            <span><%= link_to 'Upvote', votes_path(article_id: article.id, category_id: params[:id]), method: :post%></span>
            <span><%= link_to 'Downvote', vote_path(article_id: article.id, category_id: params[:id]), method: :delete  %></span>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</section>
<%= render 'shared/footer' %>
